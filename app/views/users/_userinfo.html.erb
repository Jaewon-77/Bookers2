<div>
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
  <br>
  <table class="table">
    <thead>
      <th>name</th>
      <th><%= user.name %>  </th>
      </thead>
    <tbody>
      <tr>
        <td>  introduction  </td>
        <td><%= user.introduction %>  </td>
      </tr>
      <tr>
        <td>follows</td>
        <td><%= link_to user_followings_path(user.id), class: 'text-blue' do %><%= user.followings.count %> <% end %></td>
      </tr>
      <tr>
        <td>follwers</td>
        <td><%= link_to user_followers_path(user.id), class: 'text-blue' do %><%= user.followers.count %> <% end %></td>
      </tr>
   </tbody>
  </table>
  <p><%= link_to  edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %> <i class="fa-solid fa-user-gear"></i> <% end %></p>

</div>
