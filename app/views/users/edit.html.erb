<div class= "container">
  <div class= "row">
    <div class="col-sm-12 col-md-8 col-lg-5 pc-5 px-sm-0 mx-auto">
      
<h2>User info</h2>
<form>
  <%= form_with model: @user do |f| %>
  <div class= "form-group">
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  </div>
  <div class= "form-group">
  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div class= "form-group">
  <label for="inputName">Introduction</label><br>
  <%= f.text_area :introduction %>
  </div>
  <div class= "form-group">
  <%= link_to user_path(current_user.id) do %> <%= f.submit "Update User" %> <% end %>
  </div>
<% end %>
</form>
</div>
</div>
</div>
<footer>
  <div class="container mt-5">
     <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
     </div>
  </div>
</footer>