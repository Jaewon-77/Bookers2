<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/userinfo', user: @user %>
      <%= render 'users/newbook', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <thead>
          
        </thead>
        <tbody>
       <tr>
         <td>
         <%= link_to user_path(current_user.id), class: 'nav-link text-blue' do  %><%= image_tag @user.get_profile_image(100,100) %><br> <%=@user.name %> <% end %>
         </td>
         <td>
         <%= link_to book_path(@book.id), class: 'text-blue' do %> <%= @book.title %> <% end %>
         </td>
         <td><%= @book.body %></td>
         
       </tr>
       </tbody>
       
     </table>
    </div>
  </div>
</div>
<footer>
  <div class="container mt-5">
     <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
     </div>
  </div>
</footer>

















