<h1>Follower Users</h1>

<table class="table">
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thead>
        <tbody>

     <% @users.each do |user| %>
       <tr>
         <td><%= image_tag user.get_profile_image(100,100) %></td>
         <td><%= user.name %></td>
         <td>
           <p>フォロワー数：<%= user.followers.count %></p>
         </td>
         <td>
           <p>フォロー数：<%= user.followings.count %></p>
         </td>
         <td><%= link_to "Show",user_path(user.id) %></td>
       </tr>
     <% end %>
</tbody>
</table>